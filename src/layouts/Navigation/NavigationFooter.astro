---
import { twJoin } from 'tailwind-merge'

const { pathname: currentPathname } = Astro.url

const links = [
  { name: 'OpenSource, OpenData', link: '/dokumentation/open-source' },
  { name: 'Dokumentation', link: '/dokumentation' },
  { name: 'Datenschutz & Impressum', link: '/legal' },
]
---

<ul class="-mt-1 text-sm leading-snug">
  {
    links.map(({ name, link }) => {
      return (
        <li class="p-0">
          <a
            class={twJoin(
              'inline-block py-2 decoration-teal-50',
              currentPathname === link
                ? 'font-semibold no-underline'
                : 'underline underline-offset-4 hover:text-teal-100',
            )}
            href={link}
            lang="de"
          >
            {name}
          </a>
        </li>
      )
    })
  }
</ul>
