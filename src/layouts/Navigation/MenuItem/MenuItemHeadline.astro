---
import { twMerge } from 'tailwind-merge'

type Props = {
  href?: string
  highlightExactMatch?: boolean
}

const { href, highlightExactMatch } = Astro.props
const { pathname: currentPathname } = Astro.url
const active =
  href && (highlightExactMatch ? currentPathname === href : currentPathname.startsWith(href))
---

<h2 class="my-2 text-xl font-semibold text-teal-50">
  {
    href ? (
      <a href={href} class={twMerge(active && 'hover:text-cyan-500')}>
        <slot />
      </a>
    ) : (
      <slot />
    )
  }
</h2>
