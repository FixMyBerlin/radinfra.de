---
import Notice from '@components/Notice.astro'
import { twJoin } from 'tailwind-merge'
import NavigationFooter from './NavigationFooter.astro'
import NavigationHeader from './NavigationHeader.astro'
import NavigationtMenu from './NavigationMenu.astro'
import { NavigationMobile } from './NavigationMobile.tsx'

export interface Props {
  /** @desc switches the navigation to scroll in itself ("app") vs. with the "article" */
  layoutType: 'article' | 'app'
}

const { layoutType } = Astro.props
---

<nav
  class={twJoin(
    layoutType === 'app' ? 'bg-white' : 'mb-10 lg:mb-0',
    'z-[1001] flex w-full flex-none justify-between px-3 py-3 shadow-xl lg:relative lg:z-auto lg:block lg:w-64 lg:py-6 lg:shadow-none',
    'group/navi',
  )}
  lang="de"
>
  <NavigationHeader />

  <NavigationMobile client:load>
    <NavigationtMenu />
    <NavigationFooter />
  </NavigationMobile>

  <div class="z-[2000] hidden transition-all duration-150 lg:block">
    <Notice colorClass="bg-pink-100 text-pink-800 prose-pink" className="mt-8 mb-8 py-3 pr-1 pl-3">
      <div class="flex items-start gap-2">
        <!-- https://fontawesome.com/icons/person-digging?f=classic&s=solid -->
        <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 576 512"
          class="mt-0.5 size-8 flex-none"
        >
          <path
            fill="currentColor"
            d="M208 64a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zM9.8 214.8c5.1-12.2 19.1-18 31.4-12.9L60.7 210l22.9-38.1C99.9 144.6 129.3 128 161 128c51.4 0 97 32.9 113.3 81.7l34.6 103.7 79.3 33.1 34.2-45.6c6.4-8.5 16.6-13.3 27.2-12.8s20.3 6.4 25.8 15.5l96 160c5.9 9.9 6.1 22.2 .4 32.2s-16.3 16.2-27.8 16.2l-256 0c-11.1 0-21.4-5.7-27.2-15.2s-6.4-21.2-1.4-31.1l16-32c5.4-10.8 16.5-17.7 28.6-17.7l32 0 22.5-30L22.8 246.2c-12.2-5.1-18-19.1-12.9-31.4zm82.8 91.8l112 48c11.8 5 19.4 16.6 19.4 29.4l0 96c0 17.7-14.3 32-32 32s-32-14.3-32-32l0-74.9-60.6-26-37 111c-5.6 16.8-23.7 25.8-40.5 20.2S-3.9 486.6 1.6 469.9l48-144 11-33 32 13.7z"
          ></path></svg
        >
        <div>
          <h2 class="!my-0 text-base leading-tight text-pink-900">Beta-Version</h2>
          <p class="!mt-0.5 !mb-0 text-xs">
            Diese Seite ist im Aufbau. Sie wird <a
              href="https://pretalx.com/fossgis2025/talk/review/98VFKNSGRX8DWKHBH8KUDD8ZZST7WCX9"
              target="_blank">auf dem FOSSIGS Vortrag am 28.3.2025</a
            > offiziell vorgestellt.
          </p>
        </div>
      </div>
    </Notice>

    <NavigationtMenu />
    <NavigationFooter />
  </div>
</nav>
