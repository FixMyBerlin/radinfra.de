---
import type { PageHeadlineProps } from '@components/text/PageHeadline.astro'
import { twJoin } from 'tailwind-merge'
import LayoutArticle from './LayoutArticle.astro'
import { proseBase, proseHeadings } from './baseStyles'
import PageHeadline from '@components/text/PageHeadline.astro'

type Props = {
  frontmatter: {
    title: string
    noindex?: boolean | undefined
    language?: 'en' | 'de' | undefined
  } & PageHeadlineProps
}
export type LayoutArticleProps = Props

const {
  frontmatter: { title, category, headline, intro, noindex, language },
} = Astro.props
---

<LayoutArticle title={title} noindex={noindex}>
  <article class={twJoin(proseBase, 'max-w-prose pb-20', proseHeadings)} lang={language}>
    <PageHeadline category={category} headline={headline} intro={intro} />
    <slot />
  </article>
</LayoutArticle>
