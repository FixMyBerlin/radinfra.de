---
import { CameraIcon, MapIcon } from '@heroicons/react/20/solid'
import MapRouletteLogo from '../Link/assets/MapRouletteLogo.svg'
import StreetCompleteLogo from '../Link/assets/StreetComplete-color.svg'
import { recommendedActions } from 'cms/utils/recommendedActionSelect'
import { twMerge } from 'tailwind-merge'

type Props = { action: (typeof recommendedActions)[number]; className?: string }
const { action, className } = Astro.props
---

{
  action == 'map' && (
    //
    <MapIcon className={twMerge('not-prose size-4', className)} />
  )
}
{
  action == 'maproulette' && (
    //
    <MapRouletteLogo class={twMerge('not-prose size-4 opacity-70', className)} />
  )
}
{
  action == 'streetcomplete' && (
    //
    <StreetCompleteLogo class={twMerge('not-prose size-4 opacity-90 grayscale', className)} />
  )
}
{
  action == 'mapillary' && (
    //
    <CameraIcon className={twMerge('size-4', className)} />
  )
}
