---
import { twMerge } from 'tailwind-merge'
import ProseSection from '../text/ProseSection.astro'

type Props = {
  classes?: string | undefined
  sectionClasses?: string | undefined
  headline?: string
}

const { sectionClasses, headline } = Astro.props
---

<ProseSection classes={twMerge('mb-0 mt-0', sectionClasses)}>
  {headline ? <h2 class="!mt-0">{headline}</h2> : ''}

  <div class="space-y-3">
    <slot />
  </div>
</ProseSection>
