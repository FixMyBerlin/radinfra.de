---
import { twMerge } from 'tailwind-merge'
import ProseSection from '../text/ProseSection.astro'

type Props = {
  id?: string
  classes?: string | undefined
  sectionClasses?: string | undefined
  headline?: string
}

const { id, sectionClasses, headline } = Astro.props
---

<ProseSection id={id} classes={twMerge('prose-base mt-0 mb-0', sectionClasses)}>
  {headline ? <h2 class="!mt-0">{headline}</h2> : ''}

  <div class="flex flex-col gap-3">
    <slot />
  </div>
</ProseSection>
