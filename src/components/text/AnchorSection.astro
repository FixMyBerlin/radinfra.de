---
import { twMerge } from 'tailwind-merge'
import Link from 'astro-heroicons/solid/Link.astro'

type Props = {
  id?: string | undefined
  classes?: string | undefined
}

const { id, classes } = Astro.props
---

<section
  id={id}
  class={twMerge(
    id
      ? 'group relative target:rounded-xs target:bg-teal-950 target:ring-8 target:ring-teal-950'
      : '',
    classes,
  )}
>
  <slot />
  {
    id && (
      <a
        href={`#${id}`}
        title="Link zu diesem Absatz"
        class="opacity-0 transition-opacity group-hover:opacity-70 hover:text-cyan-950"
      >
        <Link class="absolute top-1 right-1 size-4" />
      </a>
    )
  }
</section>
