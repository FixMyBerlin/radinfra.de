---
import { linkStyles } from '@components/links/styles'
import { twMerge } from 'tailwind-merge'

type Props = {
  title: string
  classes?: string
  secondary?: boolean
  defaultOpen?: boolean
}

const { title, classes, secondary, defaultOpen } = Astro.props
---

<details class={classes} open={defaultOpen}>
  <summary
    class={twMerge(
      'cursor-pointer font-bold underline',
      linkStyles,
      secondary ? 'text-teal-400' : '',
    )}
  >
    {title}
  </summary>
  <slot />
</details>
