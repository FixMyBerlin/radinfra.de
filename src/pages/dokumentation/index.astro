---
import GridCard from '@components/cards/GridCard.astro'
import GridCardWrapper from '@components/cards/GridCardWrapper.astro'
import PageHeadline from '@components/text/PageHeadline.astro'
import ProseSection from '@components/text/ProseSection.astro'
import { DocumentTextIcon, TableCellsIcon } from '@heroicons/react/24/solid'
import LayoutArticlePageAstro from '@layouts/LayoutArticlePageAstro.astro'

const pages = [
  {
    href: '/dokumentation/fuehrungsform',
    text: 'Dokumentation FÃ¼hrungsform Radverkehrsanlagen',
    icon: 'table',
  },
  {
    href: '/dokumentation/statistik',
    text: 'Dokumentation Statistik',
    icon: 'document',
  },
  {
    href: '/dokumentation/open-source',
    text: 'OpenSource & OpenData',
    icon: 'document',
  },
] as const
---

<LayoutArticlePageAstro title="Dokumentation" noindex={true}>
  <PageHeadline
    category={undefined}
    headline="Dokumentation"
    intro="Radinfra.de und TILDA Radverkehr sind OpenSource Projekte die Daten aus OpenStreetMap aufbereitet."
  />

  <GridCardWrapper headline="Dokumentation" sectionClasses="mt-16">
    {
      pages.map(({ icon, ...card }) => {
        return (
          <GridCard {...card} variant="iconGrid">
            {icon === 'table' && <TableCellsIcon className="size-14" />}
            {icon === 'document' && <DocumentTextIcon className="size-14" />}
          </GridCard>
        )
      })
    }
  </GridCardWrapper>

  <ProseSection classes="mt-18">
    <p>
      <a href="https://tilda-geo.de/regionen/radinfra" target="_blank"> TILDA Radverkehr </a> ist ein
      OpenSource Projekt das von FixMyCity entwickelt wird.
    </p>
  </ProseSection>
</LayoutArticlePageAstro>
