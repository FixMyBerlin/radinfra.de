---
import PageHeadline from '@components/text/PageHeadline.astro'
import { CalendarDaysIcon } from '@heroicons/react/24/solid'
import LayoutArticlePageAstro from '@layouts/LayoutArticlePageAstro.astro'
import GridCard from '../../components/cards/GridCard.astro'
import GridCardWrapper from '../../components/cards/GridCardWrapper.astro'
import StackedCardWrapper from '../../components/cards/StackedCardWrapper.astro'
import CardsMitmachen from '../../components/page_mitmachen/CardsMitmachen.astro'
---

<LayoutArticlePageAstro title="Mitmachen" noindex={true}>
  <PageHeadline
    category={undefined}
    headline="Mitmachen"
    intro="Unser Ziel ist es, die Daten zur Radinfrastruktur in Deutschland so vollständig, aktuell und detailliert wie möglich zu machen. Du kannst dabei auf mehreren Wegen helfen."
  />

  <StackedCardWrapper>
    <CardsMitmachen />
  </StackedCardWrapper>

  <GridCardWrapper headline="Fragen klären…" sectionClasses="mt-16">
    <GridCard href="/kontakt#meetup" text="Monatliche Online-Meetups" variant="iconGrid">
      <CalendarDaysIcon className="size-10" />
    </GridCard>
  </GridCardWrapper>
</LayoutArticlePageAstro>
